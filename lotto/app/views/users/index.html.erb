<p id="notice"><%= notice %></p>

<h1>Käyttäjät</h1>

<table>
  <thead>
    <tr>
      <th>Käyttäjätunnus</th>
      <th>Salasana</th>
      <th>Sähköposti</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Näytä', user %></td>
        <td><%= link_to 'Muokkaa', edit_user_path(user) %></td>
        <td><%= link_to 'Poista', user, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Uusi käyttäjä', new_user_path %>
