<% provide(:title, "Kirjaudu sisään") %>
<h1>Kirjaudu sisään</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="field">
        <%= f.label 'Sähköposti' %><br>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label 'Salasana' %><br>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit 'Kirjaudu', class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    
    <p>Uusi käyttäjä? <%= link_to "Rekisteröidy!", signup_path %></p>
    
  </div>
</div>